CREATE DATABASE IF NOT EXISTS test;

CREATE TABLE IF NOT EXISTS File_Index (
  Filename VARCHAR(767) PRIMARY KEY NOT NULL,
  LastModification DATE NOT NULL,
  Size BIGINT UNSIGNED,
  Type ENUM('File', 'Directory') NOT NULL
);

